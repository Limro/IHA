<Window x:Class="Calculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:oxy="http://oxyplot.codeplex.com"
        xmlns:calculator="clr-namespace:Calculator"
        Title="Calculator" Height="350" Width="525">

    <Window.DataContext>
        <calculator:MainViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        
        <TextBox 
            AcceptsReturn="True"
            AcceptsTab="True"
            Grid.Row="0"
            Margin="10 5"
            Name="CodeBox"/>
        
        <Button
            Grid.Row="1"
            Content="Calculate"
            Margin="10 5"
            Click="CalculateClick"/>
        
        <Grid 
            Grid.Column="1"
            Grid.RowSpan="2">
            
                <oxy:Plot Model="{Binding MyModel}"/>
            

        </Grid>
        

    </Grid>
</Window>
